[ui]
username = ytakagi <ytakagi.deb@gmail.com>
ignore = ~/.hgignore_global

[alias]
br = branches
glog = log -G --template "[{if(branch, '{branch}','default')}] \033[0;33mcommit: {node|short}\033[0m \033[31m{if(tags, '(tag: {tags})','')}\033[0m\n[{date|isodate}] {author}\n{desc|strip|fill68|tabindent}\n\n"
lg = log -b . --template "\033[0;33mcommit: {node|short}\033[0m \033[31m{if(tags, '(tag: {tags})','')}\033[0m\nAuthor: {author}\nDate:   {date|isodate}\n\n\t{desc|strip|fill68|tabindent}\n\n"
dlog = log -p -r $1 --stat --template "\033[0;33mcommit: {node|short}\033[0m \033[31m{if(tags, '(tag: {tags})','')}\033[0m\nBranch: {if(branch, '{branch}','default')}\nAuthor: {author}\nDate:   {date|isodate}\n\n\t{desc|strip|fill68|tabindent}\n\033[31m---\033[0m\n"
clog = log --template "{node|short} {date|isodate} [{if(branch, '{branch}','default')}] {desc|strip|firstline}\n"

[extensions]
pager=
color=
graphlog =

[pager]
pager = LESS='-R' less
quiet = True
attend = help, diff, log, glog, lg, dlog
